<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed == true %>
  <p><input type="checkbox">This task is completed</p>
<% else %>
  <p><input type="checkbox">This task is not completed yet</p>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit a task!", edit_task_path %>

<%= link_to "Delete #{@task.id}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
